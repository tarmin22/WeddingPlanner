<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>NewWedding</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h3>Plan Your Wedding</h3>
                
            </div>
            <div class="col-3">
                <a href="dashboard" class="mr-3">Dashboard</a>
                <a href="logout">Logout</a>
            </div>          
        </div>
        @model Wedding
        <div class="row">
            <div class="col-4">
                <form asp-action="AddWedding" method="post">           
                    <div class="form-group">
                        <span class="d-block text-warning" asp-validation-for="Wedder1"></span>
                        <label for="exampleInputEmail1" asp-for="Wedder1">Groom's Name</label>
                        <input type="text" class="form-control" asp-for="Wedder1">
                    </div>
                    <div class="form-group">
                        <span class="d-block text-warning" asp-validation-for="Wedder2"></span>
                        <label for="exampleInputEmail1" asp-for="Wedder2">Bride's Name</label>
                        <input type="text" class="form-control" asp-for="Wedder2">
                    </div>
                    <div class="form-group">
                        <span class="d-block text-warning" asp-validation-for="WedDate"></span>
                        <label for="exampleInputEmail1" asp-for="WedDate">Date</label>
                        <input type="Date" class="form-control" asp-for="WedDate">
                    </div>
                    <div class="form-group">
                        <span class="d-block text-warning" asp-validation-for="Address"></span>
                        <label for="exampleInputEmail1" asp-for="Address">Address</label>
                        <input type="text" class="form-control" asp-for="Address">
                    </div>
                    <button type="submit" class="btn btn-success">Create</button>
                </form>

            </div>
        </div>
    </div>
</body>
</html>